# ============================================
# Інтернет-магазин побутової хімії — ENV Config
# ============================================

# --- Середовище ---
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# --- База даних PostgreSQL ---
DATABASE_URL=postgresql://clean_user:clean_pass@localhost:5432/clean_shop?schema=public
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# --- Redis ---
REDIS_URL=redis://localhost:6380/0

# --- JWT авторизація ---
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# --- Google OAuth (опціонально) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- Email (SMTP) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@shop.example.com

# --- Telegram ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHANNEL_ID=
TELEGRAM_MANAGER_CHAT_ID=

# --- Viber ---
VIBER_BOT_TOKEN=

# --- Instagram ---
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ACCOUNT_ID=

# --- Нова Пошта ---
NOVA_POSHTA_API_KEY=

# --- Укрпошта ---
UKRPOSHTA_BEARER_TOKEN=

# --- Оплата (LiqPay) ---
LIQPAY_PUBLIC_KEY=
LIQPAY_PRIVATE_KEY=

# --- Оплата (Monobank) ---
MONOBANK_TOKEN=

# --- Файли ---
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# --- Моніторинг (опціонально) ---
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
LOG_LEVEL=info

# --- Режим обслуговування ---
MAINTENANCE_MODE=false

# --- Push Notifications (VAPID) ---
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=mailto:noreply@clean-shop.ua

# --- App Secret (CSRF, підпис) ---
APP_SECRET=your-app-secret-change-in-production
